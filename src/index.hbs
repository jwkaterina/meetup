<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Meetup</title>
    <link rel="manifest" href="/manifest.1.json">
    <link rel="icon" type="image/x-icon" href="/icons/favicon.ico">
    <link rel="apple-touch-icon" href="/icons/meetup-bg-144.png">
    <link rel="apple-touch-icon" sizes="64x64" href="/icons/meetup-bg-64.png">
    <link rel="apple-touch-icon" sizes="144x144" href="/icons/meetup-bg-144.png">
    <link rel="apple-touch-icon" sizes="192x192" href="/icons/meetup-bg-192.png">
    <link rel="apple-touch-icon" sizes="256x256" href="/icons/meetup-bg-256.png">
    <link rel="apple-touch-icon" sizes="512x512" href="/icons/meetup-bg-512.png">
    <link href="/fonts/css/fontawesome.css" rel="stylesheet">
    <link href="/fonts/css/brands.css" rel="stylesheet">
    <link href="/fonts/css/solid.css" rel="stylesheet">
</head>
<body>
    <main>
        <!-- Header -->
        <header id="header">
            <div class="weekControls">
                <i id="prevWeekBtn" class="fa-solid fa-angle-left i-btn"></i>
                <i id="nextWeekBtn" class="fa-solid fa-angle-right i-btn"></i>
            </div>
            <div id="title">
                <img src="/icons/Watchtower.svg" alt="">
                <h1 id="currentMonth"></h1>
            </div>
            <div class="generalControls">
                <i id="loadButton" class="fa-solid fa-rotate-right i-btn"></i>
                <i id="todayButton" class="fa-solid fa-calendar-day i-btn"></i>
                <i id="addButton" class="fa-solid fa-plus fa-lg i-btn"></i>        
                <div id="loginButton" class="log">
                    <i class="fa-solid fa-arrow-right-to-bracket"></i>
                    <p class="log-text">Se connecter</p>
                </div>
                <div id="loggedButton-name" class="log">
                    <i class="fa-solid fa-user logged"></i>
                    <p class="log-text logged"></p>
                </div>
                <div id="loggedButton-circle" class="log logged"></div>
            </div>
        </header>
        <!-- Droldown -->
        <div id="dropdown">
            <div id="logoutButton" class="log">
                <i class="fa-solid fa-arrow-right-from-bracket"></i>
                <p class="log-text">Se déconnecter</p>
            </div>
            <div id="log-data" class="log">
                <p class="log-text">Mes données</p>
            </div>
        </div>

        <!-- Calendar -->
        <section id="week-headings">
        </section>
        <section id="calendar-grid">
            <div id="empty"></div>
            <div id="time-slots">
            </div>
            <div id="week-slots">
            </div>
        </section>

        <!-- Loading Animation -->
        <div class="loading">
            <img id="loading-form" src="/icons/loading-form.gif" alt="">
        </div>
        <div class="loading">
            <img id="loading-event" src="/icons/loading-event.gif" alt="">
        </div>
        <div class="loading">
            <img id="loading-data" src="/icons/loading-data.gif" alt="">
        </div>

        <!-- Snackbar -->        
        <snack-bar text="Quelque chose s'est mal passé..."></snack-bar>
    </main>    
</body>
</html>
